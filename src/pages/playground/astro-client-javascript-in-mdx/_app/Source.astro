  [
    // all the code we want to present on this page
    "./*.{ts,tsx}",
    "../../../../../maybe-a-rust-project-too/src/*.rs",
    "../*.mdx", // this page itself even!
    "./*.astro", // but doesn't include the own module ðŸ¤·ðŸ˜¢
  ],
  {
    as: "raw",
    eager: true,
  }
